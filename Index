            <!-- Step 1 -->
            <div id="step1" class="step active">
                <h2 class="step-title">‡§™‡§π‡§≤‡§æ ‡§ï‡§¶‡§Æ</h2>
                <input type="text" id="username" placeholder="@username" onkeypress="handleEnter(event, 'step1')">
                <button class="btn" onclick="nextStep(2)">‡§Ö‡§ó‡§≤‡§æ ‡§ï‡§¶‡§Æ</button>
            </div>
            
            <!-- Step 2 -->
            <div id="step2" class="step">
                <h2 class="step-title">‡§¶‡•Ç‡§∏‡§∞‡§æ ‡§ï‡§¶‡§Æ</h2>
                <p>‡§∏‡•á‡§µ‡§æ ‡§ö‡•Å‡§®‡•á‡§Ç:</p>
                
                <div class="service-options">
